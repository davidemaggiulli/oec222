@model IEnumerable<PizzaViewModel>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Prezzo</th>
            <th>Ingredienti</th>
            <th>Base Mozzarella</th>
        </tr>
    </thead>
    <tbdoy>
        @foreach (var pizza in Model)
        {
            <tr>
                <td>@pizza.Name</td>
                <td>@pizza.Price.ToString("C2")</td>
                <td>@pizza.IngredientCount</td>
                @if (pizza.HasMozzarella)
                {
                    <td>
                        Y
                    </td>
                }
                else
                {
                    <td>
                        N
                    </td>
                }
            </tr>
        }
    </tbdoy>
</table>