@model IEnumerable<PizzaViewModel>
@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>
<a class="btn btn-primary" asp-action="Create">
    Nuova Pizza
</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Prezzo</th>
            <th>Ingredienti</th>
            <th>Base Mozzarella</th>
        </tr>
    </thead>
    <tbdoy>
        @foreach(var pizza in Model){
            <tr>
                <td>@pizza.Name</td>
                <td>@pizza.Price.ToString("C2")</td>
                <td>@pizza.IngredientCount</td>
                @if(pizza.HasMozzarella){
                    <td>
                        Y
                    </td>
                } else {
                    <td>
                        N
                    </td>
                }
            </tr>
        }
    </tbdoy>
</table>